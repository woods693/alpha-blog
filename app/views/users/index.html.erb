<h1 align="center"> Listing all users </h1>

<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <% if !user.admin? %>
          <div class="well col-md-4 col-md-offset-4">
            <li>
              <%= link_to gravatar_for(user), user_path(user) %>
            </li>
            <li class="article-title">
              <%= link_to user.username, user_path(user) %>
            </li>
            <% if logged_in? && current_user.admin %>
              <div class " button">
                <%= link_to "Delete User", user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger"%>
              </div>
            <% end %>
            <li>
              <small>
                <%= pluralize(user.articles.count, "article") if user.articles %>
              </small>
            </li>
          </div>
        <% end %>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
