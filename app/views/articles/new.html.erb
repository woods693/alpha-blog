<h1>Create an article </h2>

<% if @article.errors.any? %>
  <h3> Error in article creation </h3>
  <% @article.errors.full_messages.each do |msg| %>
    <p> <%= msg %> </p>
  <% end %>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.submit %>

<% end %>