<h1 align="center">Categories</h1>
<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title" align="center">
            <%= link_to "#{category.name}", category_path(category) %>
          </li>
          <% if logged_in? && current_user.admin == true %>
            <li>
              <div class="article-buttons">
                <%= link_to "Edit", edit_category_path(category), class: "btn btn-xs btn-primary" %>
              </div>
            </li>
          <% end %>
          <li>
            <small>
              <%= pluralize(category.articles.count, "article") %> 
            </small>
          </li>
        </div>
      </div>
    </ul>
  
  <% end %>
  <%= will_paginate %>
</div>